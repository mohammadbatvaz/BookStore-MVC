@{
    Layout = "_PanelLayout";
}
<div class="main-content">
    <div class="users-header">
        <h1>افزودن دسته بندی</h1>
    </div>
    <div class="Registration-form-container">
        <form class="Registration-form"
              asp-controller="AdminPanel"
              asp-action="AddCategory"
              method="post">

            <label for="Title" class="Registration-form-label">
                <input type="text" name="Title" class="Registration-form-input" placeholder="عنوان" required>
            </label>

            <label for="Description" class="Registration-form-label">
                <input type="text" name="Description" class="Registration-form-input" placeholder="توضیحات" required>
            </label>

            <label for="EmojiIcon" class="Registration-form-label">
                <input type="text" name="EmojiIcon" class="Registration-form-input" placeholder="ایموجی" required>
            </label>
            
            <label for="BackgroundColorHEX" class="Registration-form-label">
                رنگ پس‌زمینه:
                <input type="color" name="BackgroundColorHEX" class="Registration-form-input" value="#ff0000" required>
            </label>

            <input type="submit" class="Registration-form-button" value="افزودن" />

        </form>

        @if (!Model.IsSuccess)
        {
            <p class="form-error-message">@Model.Message</p>
        }
    </div>
</div>